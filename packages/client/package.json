{
  "name": "@voter-protocol/client",
  "version": "0.1.0",
  "description": "Browser SDK for VOTER Protocol - zero-knowledge district verification + NEAR Chain Signatures",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@near-js/accounts": "^2.3.3",
    "@near-js/biometric-ed25519": "^2.3.4",
    "@near-js/crypto": "^2.3.3",
    "@near-js/keystores-browser": "^2.3.3",
    "circomlibjs": "^0.1.7",
    "ethers": "^6.15.0",
    "idb": "^8.0.3",
    "libsodium-wrappers": "^0.7.13",
    "near-api-js": "^6.3.0"
  },
  "devDependencies": {
    "@types/circomlibjs": "^0.1.6",
    "@types/node": "^24.3.2",
    "js-sha256": "^0.11.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "voter",
    "democracy",
    "zero-knowledge",
    "halo2",
    "near",
    "chain-signatures",
    "scroll",
    "ethereum"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/communisaas/voter-protocol.git",
    "directory": "packages/client"
  }
}
