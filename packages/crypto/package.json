{
  "name": "@voter-protocol/crypto",
  "version": "0.1.0",
  "description": "Cryptography library for VOTER Protocol - compression, encryption, key derivation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest watch",
    "shadow-atlas:merge-worker": "tsx services/shadow-atlas/scripts/merge-staging-worker.ts",
    "shadow-atlas:merge-once": "tsx -e \"import {mergeStagingToShards} from './services/shadow-atlas/scripts/merge-staging-worker.js'; await mergeStagingToShards();\"",
    "atlas:discover-batch": "tsx services/shadow-atlas/scripts/batch-discover.ts",
    "atlas:discover-top100": "tsx services/shadow-atlas/scripts/batch-discover.ts --strategy=population --limit=100 --concurrency=20",
    "atlas:discover-state": "tsx services/shadow-atlas/scripts/batch-discover.ts --strategy=state --concurrency=10",
    "atlas:discover-staging": "tsx services/shadow-atlas/scripts/batch-discover.ts --staging --concurrency=100 --limit=1000",
    "atlas:dashboard": "tsx services/shadow-atlas/scripts/coverage-dashboard.ts",
    "atlas:gaps": "tsx -e \"import {analyzeCoverage} from './services/shadow-atlas/services/coverage-analyzer.js'; const TOP_50=[{fips:'3651000',name:'NYC',state:'NY',population:8804190}]; const stats=await analyzeCoverage(TOP_50); console.log(JSON.stringify(stats.topGaps,null,2));\"",
    "atlas:stale": "tsx -e \"import {getStaleData} from './services/shadow-atlas/services/coverage-analyzer.js'; const stale=await getStaleData(90); console.log(JSON.stringify(stale,null,2));\"",
    "atlas:retry-worker": "tsx services/shadow-atlas/scripts/retry-worker.ts",
    "atlas:retry-stats": "tsx services/shadow-atlas/scripts/query-retry-candidates.ts stats",
    "atlas:retry-candidates": "tsx services/shadow-atlas/scripts/query-retry-candidates.ts candidates",
    "atlas:retry-blocker": "tsx services/shadow-atlas/scripts/query-retry-candidates.ts blocker",
    "atlas:validate-registry": "tsx services/shadow-atlas/scripts/validate-registry.ts",
    "atlas:validate-watch": "watch 'npm run atlas:validate-registry' --interval=86400",
    "atlas:check-freshness": "tsx services/shadow-atlas/scripts/check-freshness.ts",
    "atlas:revalidate-stale": "tsx services/shadow-atlas/scripts/check-freshness.ts --revalidate",
    "atlas:plan-expansion": "tsx services/shadow-atlas/scripts/plan-expansion.ts",
    "atlas:plan-100": "tsx services/shadow-atlas/scripts/plan-expansion.ts 100",
    "atlas:plan-1000": "tsx services/shadow-atlas/scripts/plan-expansion.ts 1000",
    "atlas:analyze-batch-results": "tsx services/shadow-atlas/scripts/analyze-batch-results.ts",
    "atlas:coverage-dashboard": "tsx services/shadow-atlas/scripts/coverage-dashboard.ts",
    "atlas:merge-staging": "tsx services/shadow-atlas/scripts/merge-staging-worker.ts",
    "atlas:test-integration": "vitest services/shadow-atlas/integration.test.ts --run",
    "atlas:test-integration-full": "bash services/shadow-atlas/scripts/test-integrations.sh"
  },
  "dependencies": {
    "@bokuweb/zstd-wasm": "^0.0.20",
    "@msgpack/msgpack": "^3.0.0",
    "@noble/hashes": "^1.3.3",
    "@turf/boolean-point-in-polygon": "^7.2.0",
    "@turf/helpers": "^7.2.0",
    "@turf/turf": "^7.2.0",
    "better-sqlite3": "^11.10.0",
    "circomlibjs": "^0.1.7",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@aztec/bb.js": "^2.1.8",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^24.3.2",
    "@types/pako": "^2.0.4",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "voter-protocol",
    "encryption",
    "compression",
    "zk",
    "near"
  ],
  "author": "VOTER Protocol",
  "license": "MIT"
}
