{
  "dashboard": {
    "title": "Shadow Atlas - Performance Deep Dive",
    "tags": ["shadow-atlas", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Latency Distribution (Heatmap)",
        "type": "heatmap",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(shadow_atlas_request_latency_bucket[1m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets",
        "yAxis": {
          "format": "ms",
          "decimals": 0
        },
        "tooltip": {
          "show": true,
          "showHistogram": true
        }
      },
      {
        "id": 2,
        "title": "Latency by Endpoint (p99)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(shadow_atlas_request_latency_bucket[5m])) by (path)",
            "legendFormat": "{{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "p99 Latency" },
          { "format": "short" }
        ],
        "lines": true,
        "linewidth": 2,
        "fill": 1
      },
      {
        "id": 3,
        "title": "Database Query Latency",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(shadow_atlas_db_query_bucket[5m])) by (queryType)",
            "legendFormat": "p50 - {{queryType}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(shadow_atlas_db_query_bucket[5m])) by (queryType)",
            "legendFormat": "p99 - {{queryType}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Query Latency" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Merkle Proof Generation Latency",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(shadow_atlas_merkle_proof_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(shadow_atlas_merkle_proof_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(shadow_atlas_merkle_proof_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Proof Generation" },
          { "format": "short" }
        ],
        "seriesOverrides": [
          {
            "alias": "p99",
            "color": "#F2495C"
          }
        ]
      },
      {
        "id": 5,
        "title": "ZK Proof Generation Latency",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(shadow_atlas_proof_generation_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(shadow_atlas_proof_generation_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(shadow_atlas_proof_generation_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "ZK Proof Generation" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "title": "Cache Performance Breakdown",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(shadow_atlas_cache_hit_total[1m])",
            "legendFormat": "Hits/sec",
            "refId": "A"
          },
          {
            "expr": "rate(shadow_atlas_cache_miss_total[1m])",
            "legendFormat": "Misses/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Operations/sec" },
          { "format": "short" }
        ],
        "stack": true
      },
      {
        "id": 7,
        "title": "Request Rate by Status Code",
        "type": "graph",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(shadow_atlas_requests_total[1m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ],
        "stack": true,
        "seriesOverrides": [
          {
            "alias": "/^5.*/",
            "color": "#E02F44"
          },
          {
            "alias": "/^4.*/",
            "color": "#FF9830"
          },
          {
            "alias": "/^2.*/",
            "color": "#73BF69"
          }
        ]
      },
      {
        "id": 8,
        "title": "Throughput (req/s)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(shadow_atlas_requests_total[1m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2
          }
        }
      },
      {
        "id": 9,
        "title": "Avg Latency (1m)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(shadow_atlas_request_latency_bucket[1m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "p99 Latency (5m)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(shadow_atlas_request_latency_bucket[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 200, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "SLO Compliance (99.9% < 100ms)",
        "type": "gauge",
        "gridPos": { "x": 18, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(1 - (sum(rate(shadow_atlas_request_latency_bucket{le=\"100\"}[5m])) / sum(rate(shadow_atlas_request_latency_bucket{le=\"+Inf\"}[5m])))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.1, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus"
        },
        {
          "name": "endpoint",
          "type": "query",
          "query": "label_values(shadow_atlas_request_latency_bucket, path)",
          "multi": true,
          "includeAll": true
        }
      ]
    }
  }
}
